<mvc:View
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc"
   controllerName="sap.ui.walkthrough.controller.App.App">
   <Button
      text="Say Hello"
      press="onShowHello"/>
   
   <!-- 
   		If you remove valueLiveUpdate="true" the databinding effect is made
   		when the field lost the focus
    -->
   
   <Input
      value="{/recipient/name}"
      description="Hello {/recipient/name}"
      valueLiveUpdate="true"
      width="60%"/>
</mvc:View>